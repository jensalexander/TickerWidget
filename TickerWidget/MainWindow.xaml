<Window x:Class="TickerWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TickerWidget.ViewModels"
        Title="TickerWidget" Width="340" Height="160"
        Topmost="True" WindowStyle="None" AllowsTransparency="True"
        Background="#CC1E1E1E" ShowInTaskbar="False">
    <Border CornerRadius="12" BorderBrush="#40FFFFFF" BorderThickness="1" Padding="12">
        <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <!-- Din liste (binder til MainViewModel.Items) -->
            <ListBox ItemsSource="{Binding Items}" BorderThickness="0" Background="{x:Null}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Ticker}" Foreground="White" Margin="0,0,8,0"/>
                            <!-- Price: style changes Foreground based on Movement -->
                            <TextBlock Text="{Binding Price}" Margin="0,0,8,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <!-- default: initial / unchanged => black -->
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movement}" Value="Up">
                                                <Setter Property="Foreground" Value="LightGreen"/> <!-- green -->
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movement}" Value="Down">
                                                <Setter Property="Foreground" Value="#FFF44336"/> <!-- red -->
                                            </DataTrigger>
                                            <!-- Initial and Unchanged will use the default black; explicit triggers kept for clarity -->
                                            <DataTrigger Binding="{Binding Movement}" Value="Initial">
                                                <Setter Property="Foreground" Value="LightBlue"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movement}" Value="Unchanged">
                                                <Setter Property="Foreground" Value="LightBlue"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="{Binding AsOf}" Foreground="LightGray" Margin="8,0,0,0" FontSize="10"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</Window>
