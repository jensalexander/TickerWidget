<Window x:Class="TickerWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TickerWidget.ViewModels"
        Title="TickerWidget" Width="340" Height="160"
        Topmost="True" WindowStyle="None" AllowsTransparency="True"
        Background="#CC1E1E1E" ShowInTaskbar="False">
    <Border CornerRadius="12" BorderBrush="#40FFFFFF" BorderThickness="1" Padding="12">
        <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <!-- Din liste (binder til MainViewModel.Items)
                 Give top margin so ListBox items don't overlap the close button area. -->
            <ListBox ItemsSource="{Binding Items}"
                     BorderThickness="0"
                     Background="{x:Null}"
                     Margin="0,36,0,0"> 
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Ticker}" Foreground="White" Margin="0,0,8,0"/>
                            <!-- Movement colours unchanged -->
                            <TextBlock Text="{Binding Price}" Margin="0,0,8,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movement}" Value="Up">
                                                <Setter Property="Foreground" Value="LightGreen"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movement}" Value="Down">
                                                <Setter Property="Foreground" Value="#FFF44336"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movement}" Value="Initial">
                                                <Setter Property="Foreground" Value="LightBlue"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movement}" Value="Unchanged">
                                                <Setter Property="Foreground" Value="LightBlue"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="{Binding AsOf}" Foreground="LightGray" Margin="8,0,0,0" FontSize="10"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Close button: declared after the ListBox so it renders on top; keep colours intact -->
            <Button x:Name="CloseButton"
                    Content="✕"
                    Width="28" Height="28"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Background="Transparent" Foreground="White"
                    BorderThickness="0" FontWeight="Bold" Cursor="Hand"
                    ToolTip="Close"
                    Click="CloseButton_Click"
                    Focusable="False"
                    Panel.ZIndex="100"/>
        </Grid>
    </Border>
</Window>
