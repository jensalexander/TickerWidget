<Window x:Class="TickerWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TickerWidget.ViewModels"
        Title="TickerWidget"
        Width="280" Height="110"       
        MinWidth="200" MinHeight="80"
        Topmost="True" WindowStyle="None" AllowsTransparency="True"
        Background="#CC1E1E1E" ShowInTaskbar="False">
    <Border CornerRadius="12" BorderBrush="#40FFFFFF" BorderThickness="1" Padding="8">
        <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <!-- Close button: declared first or last doesn't matter if ZIndex set,
                 keep it on top so it's clickable. -->
            <Button x:Name="CloseButton"
                    Content="✕"
                    Width="24" Height="24"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="0,4,4,0"
                    Background="Transparent" Foreground="White"
                    BorderThickness="0" FontWeight="Bold" Cursor="Hand"
                    ToolTip="Close"
                    Click="CloseButton_Click"
                    Focusable="False"
                    Panel.ZIndex="100"/>

            <!-- ListBox positioned below the close button so items don't overlap it -->
            <ListBox ItemsSource="{Binding Items}"
                     BorderThickness="0"
                     Background="{x:Null}"
                     Margin="0,32,0,0"> 
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="2,2"/> 
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Ticker}" Foreground="White" Margin="0,0,6,0" FontSize="12"/>
                            <!-- Movement colours unchanged -->
                            <TextBlock Text="{Binding Price}" Margin="0,0,6,0" FontSize="12">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Movement}" Value="Up">
                                                <Setter Property="Foreground" Value="LightGreen"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movement}" Value="Down">
                                                <Setter Property="Foreground" Value="#FFF44336"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movement}" Value="Initial">
                                                <Setter Property="Foreground" Value="LightBlue"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Movement}" Value="Unchanged">
                                                <Setter Property="Foreground" Value="LightBlue"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="{Binding AsOf}" Foreground="LightGray" Margin="6,0,0,0" FontSize="9"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</Window>
