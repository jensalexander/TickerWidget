<Window x:Class="TickerWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TickerWidget" Width="340" Height="160"
        Topmost="True" WindowStyle="None" AllowsTransparency="True"
        Background="#CC1E1E1E" ShowInTaskbar="False">
    <Border CornerRadius="12" BorderBrush="#40FFFFFF" BorderThickness="1" Padding="12">
        <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <!-- Din liste (binder til MainViewModel.Items) -->
            <ListBox ItemsSource="{Binding Items}" BorderThickness="0" Background="{x:Null}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Ticker}" Foreground="White" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding Price}" Foreground="#DDD"/>
                            <TextBlock Text="{Binding AsOf}" Foreground="#888" Margin="8,0,0,0" FontSize="10"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</Window>
