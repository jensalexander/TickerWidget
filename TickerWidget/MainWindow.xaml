<Window x:Class="TickerWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TickerWidget.ViewModels"
        Title="TickerWidget"
        Width="320" Height="120"
        MinWidth="200" MinHeight="80"
        Topmost="True" WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" ShowInTaskbar="False" FontFamily="Segoe UI">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolVis"/>
        <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="26"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#55FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Use a rounded Rectangle as the card so shadow & clipping follow the rounded corners exactly -->
    <Grid Margin="8">
        <Grid>
            <!-- Rounded rectangle with drop shadow -->
            <Rectangle x:Name="Card"
                       RadiusX="12" RadiusY="12"
                       StrokeThickness="0">
                <!-- Remove any duplicate <Rectangle.Fill> elements so only one exists -->
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#CC111418" Offset="0.0"/>
                        <GradientStop Color="#B31A1F24" Offset="1.0"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
                <Rectangle.Effect>
                    <DropShadowEffect Color="#66000000" BlurRadius="18" ShadowDepth="4"/>
                </Rectangle.Effect>
            </Rectangle>

            <!-- Overlay the content and clip it to the rounded rectangle so nothing renders outside corners -->
            <Grid Margin="0" ClipToBounds="True">
                <Grid.Clip>
                    <!-- Clip geometry that matches the rounded rectangle -->
                    <RectangleGeometry RadiusX="12" RadiusY="12" Rect="0,0,320,120"/>
                </Grid.Clip>

                <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ListBox ItemsSource="{Binding Items}"
                             BorderThickness="0"
                             Background="Transparent"
                             HorizontalContentAlignment="Stretch"
                             VerticalContentAlignment="Center"
                             Focusable="False"
                             Padding="12,10,8,10">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Padding" Value="4,2"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Left badge: ticker + market code -->
                                    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0">
                                        <Border CornerRadius="6" Background="#FF2E7DAB" Padding="6,4" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Ticker}" Foreground="White" FontWeight="SemiBold" FontSize="12"/>
                                        </Border>
                                        <Border CornerRadius="6" Background="#44FFFFFF" Padding="6,4" Margin="6,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding MarketCode}" Foreground="White" FontSize="11"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Price + timestamp -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Price}" FontSize="14" Margin="0,0,12,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Movement}" Value="Up">
                                                            <Setter Property="Foreground" Value="LightGreen"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Movement}" Value="Down">
                                                            <Setter Property="Foreground" Value="#FFF44336"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Movement}" Value="Initial">
                                                            <Setter Property="Foreground" Value="LightBlue"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Movement}" Value="Unchanged">
                                                            <Setter Property="Foreground" Value="LightBlue"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding MarketOpen}" Value="False">
                                                            <Setter Property="Foreground" Value="LightGray"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Text="{Binding AsOf, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"
                                                   Foreground="#BBD0D6DE"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Close button on the right -->
                    <Button Grid.Column="1"
                            Style="{StaticResource CloseButtonStyle}"
                            Click="CloseButton_Click"
                            Margin="8,0,0,0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            ToolTip="Close"
                            Content="✕"
                            Panel.ZIndex="200"
                            IsHitTestVisible="True"
                            Focusable="False"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
